@model EMGMSA.Models.Car;

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Ajouter une voiture";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Brand" class="control-label p-3">Marque</label>
        <select asp-for="Brand" name="Brand" class="form-control">
            <option value="">-- Sélectionner une marque --</option>
            <option value="Toyota">Toyota</option>
            <option value="Honda">Honda</option>
            <option value="BMW">BMW</option>
            <option value="Ford">Ford</option>
            <option value="Audi">Audi</option>
            <option value="Volkswagen">Volkswagen</option>
            <option value="Mercedes">Mercedes</option>
            <option value="Peugeot">Peugeot</option>
            <option value="Renault">Renault</option>
            <option value="Nissan">Nissan</option>
            <option value="Chevrolet">Chevrolet</option>
        </select>
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model" class="control-label p-3">Le model</label>
        <input asp-for="Model" name="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year" class="control-label p-3">L'annee</label>
        <input asp-for="Year" name="Year" class="form-control" type="number" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label p-3">Prix</label>
        <input asp-for="Price" name="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label p-3">Description</label>
        <textarea asp-for="Description" name="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhotoUrl" class="control-label p-3">PhotoUrl</label>
        <input asp-for="photo" name="Photo" type="file" class="form-control" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable" class="control-label p-3">Disponible</label>
        <select asp-for="IsAvailable" name="IsAvailable" class="form-control">
            <option value="true">Oui</option>
            <option value="false">Non</option>
        </select>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mr-5">Ajouter la voiture</button>

    <a href="@Url.Action("Index", "Cars")" class="btn btn-secondary">Retour à la liste</a>
    
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <div class="text-danger">@error.ErrorMessage</div>
    }

</form>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
}
