@model IEnumerable<Car>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Liste des voitures";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead class="table-secondary">
        <tr>
            <th>Marque</th>
            <th>Modèle</th>
            <th>Prix</th>
            <th>Disponibilité</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.Price</td>
                <td>@(car.IsAvailable ? "Disponible" : "Non disponible")</td>
                <td>
                    <a href="@Url.Action("Edit", "Cars", new { id = car.Id })" class="btn btn-warning btn-sm">Modifier</a>
                    <a href="@Url.Action("Delete", "Cars", new { id = car.Id })" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Cars")" class="btn btn-primary">Ajouter une voiture</a>
