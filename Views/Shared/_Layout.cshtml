<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EMGMSA</title>

    <!-- Lien vers Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
    .login-link {
        font-weight: bold;       /* Met le texte en gras */
        margin-left: 25px;       /* Décale légèrement vers la droite */
        color: #007bff !important; /* Couleur bleue pour correspondre au style Bootstrap */
        text-transform: uppercase; /* Met le texte en majuscules pour plus d'impact */
    }

    .login-link:hover {
        color: #0056b3 !important; /* Change légèrement la couleur au survol */
        text-decoration: underline; /* Souligne le texte au survol */
    }
</style>

</head>
<body>
    <div class="container">
        <header>
            <!-- Tu peux ajouter un header ici -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">EMGMSA</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Create", "Cars")">Ajouter une voiture</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link login-link" href="@Url.Action("Login","Account")">Connexion</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link login-link" href="@Url.Action("Register","Account")">S'inscrire</a>

                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        @RenderBody()

        <footer class="mt-4">
            <p>&copy; 2025 EMGMSA</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>

